<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="material-pink">Consultar Usu√°rios</h1>

  <%= form_tag consultusers_path, method: "get" do %>
    <div class="input-field">
      <%= text_field_tag :nickname, params[:nickname], id: "nickname" %>
      <%= button_tag(class: "label-icon") do %>
        <i class="material-icons">search</i>
      <% end %>
    </div>
  <% end %>

  <br>

  <ul class="card-list">
    <% @users.each do |user| %>
      <li class="card-panel">
        <a class="card-box">
            <div class="card-header">
              <i class="small material-icons person-icon">person</i>
            </div>
            <div class="card-body">
              <h3><%= user.name %></h3>
              <strong><%= user.nickname %></strong>
              <strong><%= user.phone_number %></strong>
            </div>
        </a>
      </li>
    <% end %>
  </ul>

</div>

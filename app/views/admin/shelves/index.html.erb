<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="material-pink">Estantes</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shelves.each do |shelf| %>
        <tr>
          <td><%= link_to 'Show', shelf %></td>
          <td><%= link_to 'Edit', edit_shelf_path(shelf) %></td>
          <td><%= link_to 'Destroy', shelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova Estante', new_shelf_path %>

</div>

<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="material-pink">Livros</h1>

  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Publicação</th>
        <th>Código</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.publication %></td>
          <td><%= book.code %></td>
          <td><%= link_to 'Detalhar', admin_book_path(book) %></td>
          <td><%= link_to 'Editar', edit_admin_book_path(book), class: "material-gray" %></td>
          <td><%= link_to 'Deletar', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>

  <%= link_to 'Novo Livro', new_admin_book_path, class: "waves-effect waves-light btn material-white" %>

</div>

<div class="container">
  <div id="login-page" class="row">
    <div class="col s4 offset-s4 z-depth-4 card-panel login-panel">
      <form class="login-form">

        <div class="input-field col s12 center">
          <p class="center login-form-text login-subheader">Material Design</p>
        </div>

        <div class="row margin">
          <div class="input-field col s12">
            <i class="material-icons prefix">person_outline</i>
            <input id="username" type="text">
            <label for="username" class="center-align">
          </div>
        </div>

        <div class="row margin">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <input id="password" type="text">
            <label for="password" class="center-align">
          </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
              <a href="" class="btn waves-effect waves-light material-white col s12">Login</a>
            </div>
        </div>

      </form>
    </div>
  </div>
</div>

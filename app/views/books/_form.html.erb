<%= form_with(model: book, local: true) do |form| %>

  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Título" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label "Autor" %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label "Data de Publicação" %>
    <%= form.text_field :publication, class: 'datepicker'%>
  </div>

  <div class="field">
    <%= form.label "Código" %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label "Gênero Literario" %>
    <%= form.select :genre, Book.genres.keys %>
  </div>

  <div class="field">
    <%= form.check_box :trade, id: 'chbox' %>
    <%= form.label "Disponível Para Troca?", for: 'chbox', id: 'chbox' %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "waves-effect waves-light btn" %>
  </div>

<% end %>
